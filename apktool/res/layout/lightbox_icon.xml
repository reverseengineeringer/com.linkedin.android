<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/icon_logo" android:layout_width="@dimen/lightbox_logo_length" android:layout_height="@dimen/lightbox_logo_length" android:layout_marginRight="@dimen/lightbox_logo_margin" android:contentDescription="@string/logo" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@id/title_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/lightbox_text_margin" android:text="Title" style="@style/lightbox_title_text" />
        <TextView android:id="@id/main_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Main Text here." style="@style/lightbox_main_text" />
    </LinearLayout>
</LinearLayout>