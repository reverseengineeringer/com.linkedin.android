<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <inset android:insetLeft="@dimen/premium_chooser_dismiss_inset" android:insetRight="@dimen/premium_chooser_dismiss_inset" android:insetTop="@dimen/premium_chooser_dismiss_inset" android:insetBottom="@dimen/premium_chooser_dismiss_inset">
            <rotate android:fromDegrees="45.0" android:toDegrees="45.0">
                <layer-list>
                    <item android:left="@dimen/premium_chooser_dismiss_trim" android:right="@dimen/premium_chooser_dismiss_trim">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/premium_chooser_dismiss_light_pressed" />
                        </shape>
                    </item>
                    <item android:top="@dimen/premium_chooser_dismiss_trim" android:bottom="@dimen/premium_chooser_dismiss_trim">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/premium_chooser_dismiss_light_pressed" />
                        </shape>
                    </item>
                </layer-list>
            </rotate>
        </inset>
    </item>
    <item android:state_enabled="true">
        <inset android:insetLeft="@dimen/premium_chooser_dismiss_inset" android:insetRight="@dimen/premium_chooser_dismiss_inset" android:insetTop="@dimen/premium_chooser_dismiss_inset" android:insetBottom="@dimen/premium_chooser_dismiss_inset">
            <rotate android:fromDegrees="45.0" android:toDegrees="45.0">
                <layer-list>
                    <item android:left="@dimen/premium_chooser_dismiss_trim" android:right="@dimen/premium_chooser_dismiss_trim">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/light_gray" />
                        </shape>
                    </item>
                    <item android:top="@dimen/premium_chooser_dismiss_trim" android:bottom="@dimen/premium_chooser_dismiss_trim">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/light_gray" />
                        </shape>
                    </item>
                </layer-list>
            </rotate>
        </inset>
    </item>
    <item android:state_enabled="false">
        <inset android:insetLeft="@dimen/premium_chooser_dismiss_inset" android:insetRight="@dimen/premium_chooser_dismiss_inset" android:insetTop="@dimen/premium_chooser_dismiss_inset" android:insetBottom="@dimen/premium_chooser_dismiss_inset">
            <rotate android:fromDegrees="45.0" android:toDegrees="45.0">
                <layer-list>
                    <item android:left="@dimen/premium_chooser_dismiss_trim" android:right="@dimen/premium_chooser_dismiss_trim">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/white_70" />
                        </shape>
                    </item>
                    <item android:top="@dimen/premium_chooser_dismiss_trim" android:bottom="@dimen/premium_chooser_dismiss_trim">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/white_70" />
                        </shape>
                    </item>
                </layer-list>
            </rotate>
        </inset>
    </item>
</selector>