<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/white_btn_raised_pressed" />
            <stroke android:width="@dimen/identity_insight_action_circle_stroke_width" android:color="@color/color_primary" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="oval">
            <solid android:color="@color/white_btn_raised_hover" />
            <stroke android:width="@dimen/identity_insight_action_circle_stroke_width" android:color="@color/color_primary" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="@dimen/identity_insight_action_circle_stroke_width" android:color="@color/color_primary" />
        </shape>
    </item>
</selector>